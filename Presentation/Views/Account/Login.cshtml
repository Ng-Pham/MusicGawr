@model Models.ViewModels.LoginViewModel

<div class="modal fade" id="login">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="modal-body">
                <div class="register_img">
                    <img src="~/Images/register_img.png" class="img-responsive" alt="">
                </div>
                <div class="register_form login-form">
                    <form action="~/Account/Login" name="myFormLogin" id="loginForm" class="login-form">
                        @Html.AntiForgeryToken()
                        <div class="heading-slider">
                            <h1>Login <span>/</span> Sign In</h1>
                        </div>

                        <!-- Thêm div để hiển thị thông báo lỗi -->
                        <div id="loginError" class="alert alert-danger" style="display: none;"></div>
                        <div id="validationSummary" class="text-danger"></div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter Your Username", required = "required" })
                            <span><i class="far fa-user"></i></span>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
                            <span><i class="fas fa-lock"></i></span>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.RememberMe) Keep me signed in
                                </label>
                            </div>
                        </div>

                        <a href="javascript:void(0)" class="btn btn-submit login-btn" id="loginBtn">Login Now</a>

                        <div class="popup-forgot">
                            <a href="#" data-toggle="modal" data-target="#forgotpassword" onclick="$('#login').modal('hide');">Forgot Password?</a>
                        </div>

                        <p>
                            Don't Have An Account?
                            <a href="#" data-toggle="modal" data-target="#register" onclick="$('#login').modal('hide');">Register Here</a>
                        </p>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

