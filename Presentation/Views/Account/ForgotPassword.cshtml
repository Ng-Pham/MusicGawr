@model Models.ViewModels.ResetPasswordViewModel
<div class="modal fade" id="forgotpassword">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="modal-body">
                <div class="register_img">
                    <img src="~/Images/register_img.png" class="img-responsive" alt="">
                </div>
                <div class="register_form">
                    <form action="~/Account/ForgotPassword" role="form" name="MyFormForgotPassword" id="FormForgotPassword">
                        @Html.AntiForgeryToken()
                        <div class="heading-slider">
                            <h1>Forgot Password</h1>
                        </div>

                        <div id="forgotPasswordError" class="alert alert-danger" style="display: none;"></div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Your Email", @required = "required", @type = "email" })
                            <span><i class="far fa-envelope"></i></span>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <a class="btn btn-submit" id="forgotBtn">Submit</a>
                    </form>
                    <div id="overlayMessage" style="display:none;">
                        <div class="overlay-content">
                            <p id="overlayText" style="color: #d5435c;"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="fullScreenLoading" class="">
    <div class="loading-backdrop">
        <div class="loading-spinner">
            <div class="custom-spinner"></div>
            <div class="text-light" style="font-size: 18px; margin-top: 15px">Sending email...</div>
        </div>
    </div>
</div>
